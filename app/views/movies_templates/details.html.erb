<h1> Movie # <%= @the_movie.id %> details </h1>

<dl>
  <dt> Title</dt>
  <dd> <%= @the_movie.title %></dt>

  <dt> Year </dt>
  <dd> <%= @the_movie.year %> </dt>

  <dt> Duration</dt>
  <dd> <%= @the_movie.duration %> </dt>

  <dt> Description</dt>
  <dd> <%= @the_movie.description %> </dt>

  <dt> Image </dt>
  <dd> 
    <img src="<%= @the_movie.id %>" width="50">
  </dd>

  <dt> Director</dt>
  <dd> 
    <% matching_records = Director.where(:id => @the_movie.director_id) %>
    <% the_director = matching_records.first %>
    <%= the_director.name %>
  </dt>

  <dt> Created at </dt>
  <dd> <%= @the_movie.created_at %></dt>

  <dt> Updated at</dt>
  <dd> <%= @the_movie.updated_at %></dt>

